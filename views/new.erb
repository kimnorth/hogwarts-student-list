<h1>Create Student</h1>

<form method="POST" action="/hogwarts/students">

<label for="first_name">First Name: </label>
  <input type="text" id="first_name" name="first_name" />

<label for="last_name">Last Name: </label>
  <input type="text" id="last_name" name="last_name" />

<label for="house">House: </label>
  
  <select id="house" name="house">

    <option 
    <%= "selected" if (@random_house == "Gryffindor") %>
    value="Gryffindor">Gryffindor</option>

    <option
    <%= "selected" if (@random_house == "Slytherin") %> 
    value="Slytherin">Slytherin</option>

    <option 
    <%= "selected" if (@random_house == "Hufflepuff") %>
    value="Hufflepuff">Hufflepuff</option>
    
    <option 
    <%= "selected" if (@random_house == "Ravenclaw") %>
    value="Ravenclaw">Ravenclaw</option>
  
  </select>

<label for="age">Age: </label>
  <input type="number" id="age" name="age" />

<input type="submit" value="Register Student" />

</form>